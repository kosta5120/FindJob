<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FindJob</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet"/>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>





</head>
<body>
    @*טפריט עליון *@

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container" dir="rtl">

            <div class="collapse navbar-collapse">

                <ul class="navbar-nav active ">
                    <li>
                        @Html.ActionLink("כניסה למנהל", "HomePage", "Home", new { @class = "nav-link", data_toggle = "modal", data_target = "#exampleModalCenter" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("פרסם משרה", "AdvertisingPage", "Home", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("חיפוש", "HomePage", "Home", new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
           
            <a href='@Url.Action("HomePage", "Home")'>
                <img src="~/ACC/New Logo.png" style="height:35px;"/>
            </a>
        </div>
    </nav>
    <form action="http://localhost:50203/Home/ConnectToAdmin" method="post">
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h5 class="modal-title" id="exampleModalLongTitle">כניסה למנהל </h5>
                    </div>
                    <div class="modal-body" dir="rtl">
                        @Html.TextBox("userName", ViewBag.userName as string, new { @class = "form-control", placeholder = "שם משתמש" , required = "required" })
                        <br />
                        @Html.TextBox("password", ViewBag.password as string, new { @class = "form-control", placeholder = "סיסמא", required = "required", type = "password" })
                    </div>

                    <div class="modal-footer" style="text-align:center;">
                        <input class="btn btn-primary" type="submit" id="btn" value="כניסה">
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="container body-content" style="margin-top:5em;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FindJob - Created By Kosta Sidorenko</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
